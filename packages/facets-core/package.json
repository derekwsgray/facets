        "prepack": "yarn clean && yarn build"
    },
    "dependencies": {
        "@fortawesome/free-regular-svg-icons": "^5.10.2",
        "@fortawesome/free-solid-svg-icons": "^5.10.2",
        "lit": "^3.2.1"
    },
    "devDependencies": {
        "typescript": "^5.7.2",
        "vite": "^6.0.6",
        "vite-plugin-dts": "^4.4.0",
        "vite-plugin-lit-css": "^2.0.0"
    }
