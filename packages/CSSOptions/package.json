{
    "name": "@uncharted.software/css-options",
    "version": "0.0.1",
    "license": "MIT",
    "entry": "src/index.ts",
    "main": "dist/es5/",
    "module": "dist/es6/",
    "iife": "dist/iife/",
    "jsnext:main": "dist/next/",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm-run-all --parallel build:**",
        "build:iife": "cross-env TARGET='iife' rollup --config",
        "build:es5": "tsc --target es5 --module commonjs --outDir ./dist/es5",
        "build:es6": "tsc --target es6 --module es6 --outDir ./dist/es6",
        "build:next": "tsc --target esnext --module esnext --outDir ./dist/next",
        "start": "cross-env TARGET='debug' rollup --config --watch",
        "watch": "npm-run-all --parallel watch:**",
        "watch:iife": "cross-env TARGET='iife' rollup --config --watch",
        "watch:es5": "tsc --target es5 --module commonjs --outDir ./dist/es5 --watch --preserveWatchOutput",
        "watch:es6": "tsc --target es6 --module es6 --outDir ./dist/es6 --watch --preserveWatchOutput",
        "watch:next": "tsc --target esnext --module esnext --outDir ./dist/next --watch --preserveWatchOutput",
        "lint": "eslint . --ext .js,.ts,.jsx,.tsx --ignore-path ../../.eslintignore",
        "prepack": "npm-run-all build"
    }
}
